<%= form_with(model: @user) do |f| %>
  <div class="form-container">
    <%= render 'shared/errors', obj: @user %>

    <div class="form-container__two-fields">
      <div class="form-container__group">
        <%= f.label 'Vorname', for: :first_name %>
        <%= f.text_field :first_name, required: true %>
      </div>

      <div class="form-container__group">
        <%= f.label 'Nachname', for: :last_name %>
        <%= f.text_field :last_name, required: true %>
      </div>

      <div class="form-container__group">
        <%= f.label 'Geburtsjahr', for: :birth_year %>
        <%= f.text_field :birth_year, required: true %>
      </div>
    </div>

    <div class="form-container__two-fields">
      <div class="form-container__group">
        <%= f.label 'E-mail', for: :email %>
        <%= f.email_field :email, required: true %>
      </div>

      <div class="form-container__group">
        <%= f.label 'Telefon', for: :tel %>
        <%= f.text_field :tel, required: true %>
      </div>
    </div>

    <div class="form-container__group">
      <%= f.label 'Passwort', for: :password %>
      <%= f.password_field :password, required: true %>
    </div>

    <div class="form-container__group">
      <%= f.label 'Passwort bestätigen', for: :password_confirmation %>
      <%= f.password_field :password_confirmation, required: true %>
    </div>

    <div class="form-container__group">
      <%= f.label 'Straße', for: :adress %>
      <%= f.text_field :adress, required: true %>
    </div>

    <div class="form-container__two-fields">
      <div class="form-container__group">
        <%= f.label 'PLZ', for: :zip_code %>
        <%= f.text_field :zip_code, required: true %>
      </div>

      <div class="form-container__group">
        <%= f.label 'Stadt', for: :city %>
        <%= f.text_field :city, required: true %>
      </div>
    </div>

    <% if params.has_key?(:seminar) %>
      <%= hidden_field_tag(:seminar, params[:seminar]) %>
    <% end %>

    <%= f.submit(@user.new_record? ? "Sign up" : "Update profile" , class: "button button-primary") %>
  </div>
<% end %>
