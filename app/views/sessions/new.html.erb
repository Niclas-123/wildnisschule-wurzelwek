<h1>Log dich ein :)</h1>

<%= form_tag sessions_path, method: :post do %>
  <div class="form-container">

    <div class="form-container__group">
      <%= label_tag :email %>
      <%= email_field_tag :email, nil, required: true %>
    </div>

    <div class="form-container__group">
      <%= label_tag :password %>
      <%= password_field_tag :password, nil, required: true %>
    </div>

    <% if params.has_key?(:seminar) %>
      <%= hidden_field_tag(:seminar, params[:seminar]) %>
    <% end %>

    <%= submit_tag "Log In", class: "button button-primary" %>
    <br>
    <%= link_to "Noch kein Konto erstellt?", frontend_sign_up_path, class: "signup-link" %>
  </div>
<% end %>
