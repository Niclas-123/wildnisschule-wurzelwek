        <%= image_tag(s.image_1, alt: "Darstellung des Seminars") %>
      </div>
      <div class="seminar-cards-container__text">
        <h2><%= link_to s.name, frontend_seminar_type_seminar_instance_path(params[:seminar_type_id], s) %></h2>
        <p><%= pluralize( Seminar.where(seminar_instance: s).count, 'Termin', 'Termine' ) %> verf√ºgbar</p>
      </div>
    </div>
  <% end %>
</div>

