<%= render 'shared/errors', obj: @user %>

<%= form_with(model: @user) do |f| %>
  <div class="form-container">
    <div class="form-container__group">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, required: true %>
    </div>

    <div class="form-container__group">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, required: true %>
    </div>

    <div class="form-container__group">
      <%= f.label :email %>
      <%= f.email_field :email, required: true %>
    </div>

    <div class="form-container__group">
      <%= f.label :password %>
      <%= f.password_field :password, required: true %>
    </div>

    <div class="form-container__group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, required: true %>
    </div>

    <div class="form-container__group">
      <%= f.label :tel %>
      <%= f.text_field :tel, required: true %>
    </div>

    <div class="form-container__group">
      <%= f.label :birth_year %>
      <%= f.text_field :birth_year, required: true %>
    </div>

    <div class="form-container__group">
      <%= f.label :adress %>
      <%= f.text_field :adress, required: true %>
    </div>

    <div class="form-container__group">
      <%= f.label :zip_code %>
      <%= f.text_field :zip_code, required: true %>
    </div>

    <div class="form-container__group">
      <%= f.label :city %>
      <%= f.text_field :city, required: true %>
    </div>

    <% if params.has_key?(:seminar) %>
      <%= hidden_field_tag(:seminar, params[:seminar]) %>
    <% end %>

    <%= f.submit(@user.new_record? ? "Sign up" : "Update profile" , class: "button-primary") %>
  </div>
<% end %>
