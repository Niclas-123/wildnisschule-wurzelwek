<h1>Buchung bestätigen</h1>

<h2>Deine Informationen:</h2>
<p>
  Name:
  <%= @booking.first_name %>
  <%= @booking.last_name %>
  <br>
  E-mail: <%= @booking.email %>
  Tel: <%= @booking.tel %>
</p>

<p>
  Adresse:
  <br>
  <%= @booking.adress %>
  <br>
  <%= @booking.zip_code %>
  <%= @booking.city %>
</p>

<h2>Buchungsinformationen:</h2>
<p>
  Seminar: <%= @booking.seminar.seminar_instance.name %>
  <br>
  Daten: <%= @booking.seminar.start_date.strftime("%m.%d.%Y") %> bis <%= @booking.seminar.end_date.strftime("%m.%d.%Y") %>
  <br>
  Preis: <%= @booking.price %><%= currency_symbol %>
  <br>
  Zahlungsmethode: <%= @booking.payment_gateway %>
</p>


<% if @booking.payment_gateway == 'stripe' %>
  <%= button_to "Jetzt bezahlen", seminar_type_seminar_instance_seminar_booking_stripe_checkout_path(@seminar_type, @seminar_instance, @seminar, @booking), action: :create, remote: true, class: "button-primary" %>
<% elsif @booking.payment_gateway == 'paypal' %>
  <p>Paypal</p>
<% else %>
  <p>Rechnung herunterladen und überweisen</p>
<% end %>



